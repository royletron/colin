@import 'nib'

div.timeline-wrapper
  margin 20px
  margin-top 0px
  height 60px
  margin-bottom 10px
  background rgba(49,77,94,0.05)
  box-shadow inset 0 1px 1px rgba(49,77,94,0.06),0 1px 0 rgba(255,255,255,0.33)  
  line-height 0px
  border-radius 2px
  border 1px solid #cdd0d3
  border-top-color #bfc1c4

text
  fill #666
  font-size 10px

g.caption-spans rect
  shape-rendering crispEdges
  stroke rgb(68, 68, 68)

g.caption-spans rect:hover
  fill white
  cursor pointer

line.timeline-background
  stroke rgb(173, 173, 173)
  stroke-width 1
  shape-rendering crispEdges

rect.timeline-click-zone
  fill rgba(0,0,0,0)

  &:hover
    cursor pointer

line.tick-bar
  shape-rendering crispEdges
  stroke rgb(173, 173, 173)
  stroke-width 1

line#current-position
  stroke-width 3px
  stroke black
  shape-rendering crispEdges

  &:hover
    cursor pointer
